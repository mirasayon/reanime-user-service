{
    "name": "reanime-user-service",
    "version": "1.12.0",
    "type": "module",
    "scripts": {
        "dev": "node --enable-source-maps --watch --env-file=.env.development ./dist/server/entry-point.js",
        "compiler": "node ./scripts/remove-dist.ts && tspc -p ./tsconfig.json --watch",
        "compile": "node ./scripts/remove-dist.ts && tsc -p ./tsconfig.json && tsc-alias -p ./tsconfig.json",
        "test-common": "node --enable-source-maps --env-file=.env.test ./dist/tests/common.js",
        "dev-test": "node --enable-source-maps --env-file=.env.test --watch ./dist/tests/play.js",
        "start:production": "node --env-file=.env.production ./dist/server/entry-point.js",
        "start:test": "node --env-file=.env.test ./dist/server/entry-point.js",
        "start:dev": "node --enable-source-maps --env-file=.env.development ./dist/server/entry-point.js",
        "db-studio:test": "dotenv -e .env.test -- prisma studio --port 2647",
        "db-studio:dev": "dotenv -e .env.development -- prisma studio --port 3647",
        "db-studio:prod": "dotenv -e .env.production -- prisma studio --port 4647",
        "inspector": "tsc --watch --noEmit -p ./tsconfig.json",
        "gen_db_client:dev": "dotenv -e .env.development -- prisma generate",
        "gen_db_client:test": "dotenv -e .env.test -- prisma generate",
        "gen_db_client:prod": "dotenv -e .env.production -- prisma generate",
        "build:dev": "node ./scripts/remove-orm.ts && npm run gen_db_client:dev && npm run compile",
        "build:test": "node ./scripts/remove-orm.ts && npm run gen_db_client:test && npm run compile",
        "build:prod": "node ./scripts/remove-orm.ts && npm run gen_db_client:prod && npm run compile",
        "prisma_format": "dotenv -e .env.development -- prisma format"
    },
    "dependencies": {
        "@prisma/adapter-pg": "^7.2.0",
        "@prisma/client": "^7.2.0",
        "better-psl": "^1.0.1",
        "compression": "^1.8.1",
        "consola": "^3.4.2",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "express": "^5.2.1",
        "helmet": "^8.1.0",
        "log-it-colored": "^0.0.3",
        "maxmind": "^5.0.1",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "pg": "^8.16.3",
        "prisma": "^7.2.0",
        "safest-env": "^0.0.1",
        "sharp": "^0.34.5",
        "ua-parser-js": "^2.0.7",
        "zod": "^4.2.1"
    },
    "devDependencies": {
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/morgan": "^1.9.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^25.0.3",
        "@types/pg": "^8.16.0",
        "dotenv-cli": "^11.0.0",
        "ts-patch": "^3.3.0",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.9.3",
        "typescript-transform-paths": "^3.5.5"
    },
    "author": {
        "email": "MiraSayon@ya.ru",
        "name": "Miralisher",
        "url": "https://MiraSayon.com"
    },
    "private": true,
    "description": "Reanime.art Backend User Service",
    "engines": {
        "node": ">=24.12.0"
    }
}
