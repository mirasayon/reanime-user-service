{
    "name": "@reanime/user-service",
    "version": "0.3.1",
    "type": "module",
    "scripts": {
        "hot:dev": "node --enable-source-maps --watch --env-file=.env.development ./dist/server/startup.js",
        "compile:hot": "tspc --watch",
        "compile": "tsc && tsc-alias",
        "hot:src": "node --watch --env-file=.env.development ./src/server/startup.ts",
        "test-common": "node --enable-source-maps --env-file=.env.test ./dist/tests/common.js",
        "dev-test": "node --enable-source-maps --env-file=.env.test --watch ./dist/tests/play.js",
        "start:production": "node --env-file=.env.production ./dist/server/startup.js",
        "start:test": "node --env-file=.env.test ./dist/server/startup.js",
        "start:dev": "node --enable-source-maps --env-file=.env.development ./dist/server/startup.js",
        "inspect:hot": "tsc --watch --noEmit",
        "gen_db_client:dev": "dotenv -e .env.development -- prisma generate",
        "gen_db_client:test": "dotenv -e .env.test -- prisma generate",
        "gen_db_client:prod": "dotenv -e .env.production -- prisma generate",
        "build:dev": "rimraf dist src/db/orm && npm run gen_db_client:dev && npm run compile",
        "build:test": "rimraf dist src/db/orm && npm run gen_db_client:test && npm run compile",
        "build:prod": "rimraf dist src/db/orm && npm run gen_db_client:prod && npm run compile"
    },
    "dependencies": {
        "@prisma/adapter-pg": "^6.17.1",
        "@prisma/client": "^6.17.1",
        "bcryptjs": "^3.0.2",
        "better-psl": "^1.0.1",
        "compression": "^1.8.1",
        "consola": "^3.4.2",
        "cookie": "^1.0.2",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "log-it-colored": "^0.0.3",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "pg": "^8.16.3",
        "prisma": "^6.17.1",
        "safest-env": "^0.0.1",
        "sharp": "^0.34.4",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/morgan": "^1.9.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.8.1",
        "@types/pg": "^8.15.5",
        "dotenv-cli": "^10.0.0",
        "rimraf": "^6.0.1",
        "ts-patch": "^3.3.0",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.9.3",
        "typescript-transform-paths": "^3.5.5"
    },
    "author": {
        "email": "MiraSayon@ya.ru",
        "name": "Miralisher",
        "url": "https://MiraSayon.com"
    },
    "private": true,
    "description": "Reanime.art User Service",
    "engines": {
        "node": ">=22.18.0"
    }
}
