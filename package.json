{
    "name": "reanime-user-service",
    "version": "0.2.0",
    "type": "module",
    "scripts": {
        "dev": "node --enable-source-maps --watch --env-file=.env.development ./dist/server/startup.js",
        "compile:watch": "tspc --watch --project ./tsconfig.json",
        "compile": "tspc --project ./tsconfig.json",
        "dex": "tsx watch --env-file=.env.development ./src/server/startup.ts",
        "test-common": "node --enable-source-maps --env-file=.env.test ./dist/tests/common.js",
        "dev-test": "node --enable-source-maps --env-file=.env.test --watch ./dist/tests/play.js",
        "start:prod": "node --env-file=.env.production ./dist/server/startup.js",
        "start:test": "node --env-file=.env.test ./dist/server/startup.js",
        "start:dev": "node --enable-source-maps --env-file=.env.development ./dist/server/startup.js",
        "ts:inspect": "tsc --watch --noEmit --project ./tsconfig.json",
        "post_build": "tsx post_build.ts",
        "generate_client:dev": "dotenv -e .env.development -- prisma generate",
        "generate_client:test": "dotenv -e .env.test -- prisma generate",
        "generate_client:prod": "dotenv -e .env.production -- prisma generate",
        "build:dev": "rimraf dist src/db/orm && npm run generate_client:dev && npm run post_build && npm run compile",
        "build:test": "rimraf dist src/db/orm && npm run generate_client:test && npm run post_build && npm run compile",
        "build:prod": "rimraf dist src/db/orm && npm run generate_client:prod && npm run post_build && npm run compile"
    },
    "dependencies": {
        "@prisma/adapter-pg": "^6.13.0",
        "@prisma/client": "^6.13.0",
        "axios": "^1.11.0",
        "bcryptjs": "^3.0.2",
        "chalk": "^5.5.0",
        "compression": "^1.8.1",
        "consola": "^3.4.2",
        "cookie": "^1.0.2",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv-cli": "^10.0.0",
        "express": "^5.1.0",
        "form-data": "^4.0.4",
        "helmet": "^8.1.0",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "pg": "^8.16.3",
        "prisma": "^6.13.0",
        "reanime": "http://192.168.0.105:5640/reanime-0.2.1.tgz",
        "zod": "^4.0.15"
    },
    "devDependencies": {
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/morgan": "^1.9.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.2.0",
        "@types/pg": "^8.15.5",
        "rimraf": "^6.0.1",
        "ts-patch": "^3.3.0",
        "tsx": "^4.20.3",
        "typescript": "^5.9.2",
        "typescript-transform-paths": "^3.5.5"
    }
}
