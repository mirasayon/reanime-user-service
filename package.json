{
    "name": "reanime-user-service",
    "version": "0.2.0",
    "type": "module",
    "scripts": {
        "dev": "node --enable-source-maps --watch --env-file=.env.development ./dist/server/startup.js",
        "test-common": "node --enable-source-maps --env-file=.env.test ./dist/tests/common.js",
        "dev-test": "node --enable-source-maps --env-file=.env.test --watch ./dist/tests/play.js",
        "postinstall": "npm run create_orm_and_move_to_dist",
        "db-generate": "npx dotenv -e .env.production -- prisma generate --no-hints",
        "db-push": "npx dotenv -e .env.production -- prisma db push",
        "db-studio": "npx dotenv -e .env.production -- prisma studio --port 7878",
        "db-pull": "npx dotenv -e .env.production -- prisma db pull",
        "db-validate": "npx dotenv -e .env.production -- prisma validate",
        "db-migrate-dev": "npx dotenv -e .env.production -- prisma migrate dev",
        "db-migrate-reset": "npx dotenv -e .env.production -- prisma migrate reset",
        "db-push-reset": "npm run db-migrate-reset && npm run db-push",
        "start-prod": "node --env-file=.env.production ./dist/server/startup.js",
        "start-test": "node --enable-source-maps --env-file=.env.test ./dist/server/startup.js",
        "dec": "tspc --watch --project ./tsconfig.json",
        "tsi": "tsc --watch --noEmit --project ./tsconfig.json",
        "create_orm_and_move_to_dist": "rimraf src/db/orm && rimraf dist/db/orm && npm run db-generate && node --experimental-strip-types --no-warnings ./postinstall.ts",
        "build": "rimraf dist && npm run create_orm_and_move_to_dist && tspc --project ./tsconfig.json"
    },
    "dependencies": {
        "@prisma/adapter-pg": "^6.12.0",
        "@prisma/client": "^6.12.0",
        "axios": "^1.11.0",
        "bcryptjs": "^3.0.2",
        "chalk": "^5.4.1",
        "compression": "^1.8.1",
        "consola": "^3.4.2",
        "cookie": "^1.0.2",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv-cli": "^9.0.0",
        "express": "^5.1.0",
        "form-data": "^4.0.4",
        "helmet": "^8.1.0",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "pg": "^8.16.3",
        "psl": "^1.15.0",
        "reanime": "http://192.168.0.105:8081/reanime-0.1.6.tgz",
        "zod": "^4.0.10"
    },
    "devDependencies": {
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/morgan": "^1.9.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.1.0",
        "@types/pg": "^8.15.4",
        "@types/psl": "^1.1.3",
        "prisma": "^6.12.0",
        "rimraf": "^6.0.1",
        "ts-patch": "^3.3.0",
        "typescript": "^5.8.3",
        "typescript-transform-paths": "^3.5.5"
    },
    "prisma": {
        "schema": "./src/db/schemas/prisma/schema.prisma"
    }
}
